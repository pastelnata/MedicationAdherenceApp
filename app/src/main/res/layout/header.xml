<?xml version="1.0" encoding="utf-8"?>
<!-- This is a reusable header using Google's Material Design Toolbar -->
<com.google.android.material.appbar.MaterialToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    app:title="Dashboard"
    app:titleTextColor="?attr/colorOnPrimary">

    <!-- This layout allows us to add icons to the end (right side) of the toolbar -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <!-- Notification Icon: Crucial for reminders, as per user stories -->
        <ImageView
            android:id="@+id/icon_notifications"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@android:drawable/ic_popup_reminder"
            app:tint="?attr/colorOnPrimary"
            android:contentDescription="@string/notification_icon_description" />

        <!-- Profile/Settings Icon: Reflects the persona's need for control and access to their info -->
        <ImageView
            android:id="@+id/icon_profile"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_myplaces"
            app:tint="?attr/colorOnPrimary"
            android:contentDescription="@string/profile_icon_description" />

    </LinearLayout>

</com.google.android.material.appbar.MaterialToolbar>
